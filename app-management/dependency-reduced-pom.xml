<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>cloud-cs5242</artifactId>
    <groupId>msc.cloud.mora</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>app-management</artifactId>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>app.management.ApplicationRegistrationLambda</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>jcommander</artifactId>
          <groupId>com.beust</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <org.wso2.json.version>3.0.0.wso2v1</org.wso2.json.version>
    <org.codehaus.jackson.mapper.version>1.9.13</org.codehaus.jackson.mapper.version>
    <com.auth0.version>3.8.1</com.auth0.version>
    <hiernate.c3p0.version>5.2.1.Final</hiernate.c3p0.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <org.wso2.msf4j.version>2.6.2</org.wso2.msf4j.version>
    <org.slf4j.version>1.7.26</org.slf4j.version>
    <hibernate.version>5.2.1.Final</hibernate.version>
    <org.codehaus.jackson.core.version>1.9.13</org.codehaus.jackson.core.version>
    <mysql.connector.version>8.0.11</mysql.connector.version>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
</project>
