<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>cloud-cs5242</artifactId>
    <groupId>msc.cloud.mora</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>token-validator</artifactId>
  <name>token-validate-lambda</name>
  <version>1.0-SNAPSHOT</version>
  <url>http://www.lcip.xyz</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>${maven.compiler.plugin.version}</version>
        <configuration>
          <source>${compile.version}</source>
          <target>${compile.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>${maven.assembly.plugin.version}</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifestEntries>
              <Premain-Class>org.uom.idp.ValidatorLambda</Premain-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${maven.surefire.plugin.version}</version>
        <configuration>
          <systemPropertyVariables>
            <parent.directory>${project.basedir}</parent.directory>
          </systemPropertyVariables>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>${maven.enforcer.plugin.verion}</version>
        <executions>
          <execution>
            <id>enforce-public-cert</id>
            <phase>validate</phase>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <requireFilesExist>
                  <files>
                    <file>${project.build.sourceDirectory}/../resources/certs/public_key.der</file>
                  </files>
                </requireFilesExist>
              </rules>
              <fail>true</fail>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>org.uom.idp.ValidatorLambda</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>central2</id>
      <url>https://maven.wso2.org/nexus/content/repositories/releases/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <hiernate.c3p0.version>5.2.1.Final</hiernate.c3p0.version>
    <org.wso2.json.version>3.0.0.wso2v1</org.wso2.json.version>
    <hibernate.version>5.2.1.Final</hibernate.version>
    <maven.enforcer.plugin.verion>1.4.1</maven.enforcer.plugin.verion>
    <maven.surefire.plugin.version>2.22.0</maven.surefire.plugin.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <junit.version>4.12</junit.version>
    <org.codehaus.jackson.core.version>1.9.13</org.codehaus.jackson.core.version>
    <org.slf4j.version>1.7.26</org.slf4j.version>
    <powermock.version>2.0.2</powermock.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <compile.version>1.8</compile.version>
    <org.wso2.msf4j.version>2.6.2</org.wso2.msf4j.version>
    <com.auth0.version>3.8.1</com.auth0.version>
    <mysql.connector.version>5.1.36</mysql.connector.version>
    <maven.compiler.plugin.version>2.3.2</maven.compiler.plugin.version>
    <maven.assembly.plugin.version>2.4.1</maven.assembly.plugin.version>
    <org.codehaus.jackson.mapper.version>1.9.13</org.codehaus.jackson.mapper.version>
  </properties>
</project>
